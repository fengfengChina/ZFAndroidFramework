<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout

    android:id="@+id/constraintLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:id="@+id/tvImg"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toTopOf="@+id/tv_title"
        app:layout_constraintBottom_toBottomOf="@+id/tv_title"
        app:layout_constraintVertical_bias="0.32999998"/>

    <TextView
        android:text="我的标题"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title"
        android:textAppearance="@android:style/TextAppearance.Material.Widget.TextView"
        app:layout_constraintLeft_toRightOf="@+id/tvImg"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout"
        android:layout_marginTop="27dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        tools:layout_constraintRight_creator="1"/>

    <TextView
        android:text="我的内容我的内容我的内容我的内容我的内容我的内容我的内容我的内容我的内容我的内容我的内容我的内容我的内容"
        android:layout_width="377dp"
        android:layout_height="33dp"
        android:maxLines="3"
        android:ellipsize="end"
        android:id="@+id/tv_content"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintTop_toBottomOf="@+id/tvImg"
        android:layout_marginTop="8dp"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintHorizontal_bias="0.47">

    </TextView>


</android.support.constraint.ConstraintLayout>
